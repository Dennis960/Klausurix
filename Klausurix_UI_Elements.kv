<Display>:

    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            
            Button:
                text: 'Tab fuer die Erstellung von Pruefungen'
                on_release: sm.current = 'tab_one'  

            Button:
                text: 'Tab fuer die Erstellung von Uebungen'
                on_release: sm.current = 'tab_two'  
                
        ScreenManager:
            id: sm
            Tab_One:
            Tab_Two:


