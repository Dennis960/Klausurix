                    # text_color: 0, 1, 0, 1
                    pos_hint: {'center_y': .5}
                    # on_release: app.save_text()

                MDRoundFlatIconButton:
                    text: "Open manager"
                    icon: "folder"
                    pos_hint: {'center_y': .5}
                    on_release: app.file_manager_open()
